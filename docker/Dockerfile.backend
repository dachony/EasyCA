FROM golang:1.22-alpine AS builder

RUN apk add --no-cache gcc musl-dev

WORKDIR /app

COPY backend/go.mod ./
RUN go mod download

COPY backend/ .

RUN go mod tidy && CGO_ENABLED=1 GOOS=linux go build -o easyca ./cmd/server

FROM alpine:3.19

RUN apk add --no-cache ca-certificates sqlite

WORKDIR /app

COPY --from=builder /app/easyca .

RUN mkdir -p /app/data

EXPOSE 8443

CMD ["./easyca"]
